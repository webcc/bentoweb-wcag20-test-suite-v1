  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_1.4_visual-audio-contrast-noaudio" primary="yes">
      <locations expectedResult="fail">
        <location line="7" column="5" xpath="/:html/:body/:div/:object" />
        <location line="12" column="6" xpath="/:html/:body/:div/:p" />
      </locations>
      <functionalOutcome>
        <p>Background sound is to loud to understand the speech reader</p>
      </functionalOutcome>
      <techComment>
        <p>The <html:code>object</html:code> element works fine with MS IE, Firefox, Netscape (tested: Firefox 1.0.6, IE 6.0, Netscape 7.1, Opera 7.51?)</p>
      </techComment>
    </rule>
  </rules>
