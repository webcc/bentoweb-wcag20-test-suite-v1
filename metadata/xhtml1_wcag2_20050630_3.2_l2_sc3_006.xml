  <formalMetadata xml:lang="en">
    <description>
			Document containing a checkbox; when the checkbox state
			changes the browser window is moved.
		</description>
    <title>Change of viewport - checkbox onchange</title>
    <dc:creator>johannes.koch@fit.fraunhofer.de</dc:creator>
    <dc:language>en</dc:language>
    <dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
    <date>2005-08-25</date>
    <status>draft</status>
  </formalMetadata>
  <technology xml:lang="en">
    <recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
      <label>
        <html:acronym>XHTML</html:acronym>
				&#8482; 1.0 The Extensible HyperText Markup Language
				(Second Edition)
			</label>
      <testElements>
        <testElement>
          <elementName localname="input" namespace="http://www.w3.org/1999/xhtml" />
          <specReference xlink:href="http://www.w3.org/TR/1999/REC-html401-19991224/interact/scripts.html#adef-onchange" />
        </testElement>
      </testElements>
    </recommendation>
  </technology>
  <testCase complexity="atomic">
    <purpose>
      <p>
				The test is intended to fail because a change in
				checkbox state changes the viewport.
			</p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>enduser</testMode>
      </testModes>
      <scenario id="s01">
        <userGuidance xml:lang="en">
          <p>Please try to select the option.</p>
        </userGuidance>
        <questions>
          <likertScale display="horizontal">
            <questionText xml:lang="en">
              <p>Have you been distracted trying to do the task? </p>
            </questionText>
            <likertLevel number="1">
              <label xml:lang="en">not at all - did not notice any</label>
              <value>1</value>
            </likertLevel>
            <likertLevel number="2">
              <label xml:lang="en">a bit - it confused me for a second</label>
              <value>2</value>
            </likertLevel>
            <likertLevel number="3">
              <label xml:lang="en">enough - it confused me for a while</label>
              <value>3</value>
            </likertLevel>
            <likertLevel number="4">
              <label xml:lang="en">quite enough - it was difficult for me
								to do the task</label>
              <value>4</value>
            </likertLevel>
            <likertLevel number="5">
              <label xml:lang="en">very much - I could not do the task</label>
              <value>5</value>
            </likertLevel>
          </likertScale>
        </questions>
        <experience>
          <AssistiveTechnology minimumLevel="2" type="screenreader" />
          <UserAgent minimumLevel="3" type="browser" />
        </experience>
      </scenario>
      <scenario id="s02">
        <userGuidance xml:lang="en">
          <p>Please try to select the option.</p>
        </userGuidance>
        <questions>
          <likertScale display="horizontal">
            <questionText xml:lang="en">
              <p>Have you been distracted trying to do the task? </p>
            </questionText>
            <likertLevel number="1">
              <label xml:lang="en">not at all - did not notice any</label>
              <value>1</value>
            </likertLevel>
            <likertLevel number="2">
              <label xml:lang="en">a bit - it confused me for a second</label>
              <value>2</value>
            </likertLevel>
            <likertLevel number="3">
              <label xml:lang="en">enough - it confused me for a while</label>
              <value>3</value>
            </likertLevel>
            <likertLevel number="4">
              <label xml:lang="en">quite enough - it was difficult for me
								to do the task</label>
              <value>4</value>
            </likertLevel>
            <likertLevel number="5">
              <label xml:lang="en">very much - I could not do the task</label>
              <value>5</value>
            </likertLevel>
          </likertScale>
        </questions>
        <experience>
          <UserAgent minimumLevel="3" type="browser" />
        </experience>
      </scenario>
    </requiredTests>
    <files>
      <file xlink:href="../testfiles/xhtml1_wcag2_20050630_3.2_l2_sc3_006.html" hrefLang="en" />
    </files>
  </testCase>
  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_3.2_consistent-behavior-unpredictable-change" primary="yes">
      <locations expectedResult="fail">
        <location line="8" column="83" xpath="/h:html/h:body/h:p[1]/h:input" />
      </locations>
      <functionalOutcome>
        <p>Change of viewport onchange.</p>
      </functionalOutcome>
      <techComment>
        <p>
					The JavaScript in the onchange attribute causes the
					browser to change the viewport.
				</p>
      </techComment>
    </rule>
  </rules>
  <namespaceMappings>
