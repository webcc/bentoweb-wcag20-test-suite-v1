  <testCase complexity="atomic">
    <purpose>
      <p>This test case is intended to pass, because the background sound is 20 dB lower than the foreground audio content. Only the understandability of the speech output is being tested here.</p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>enduser</testMode>
      </testModes>
      <scenario id="s01">
        <userGuidance xml:lang="en">
          <p>Note : it is possible that you are not able to perform the requested action.</p>
        </userGuidance>
        <questions>
          <yesNoOpenQuestion>
            <questionText xml:lang="en">
              <p>Was the output from your assistive technology device hindered by the background sound ? </p>
            </questionText>
            <optionYes value="1" />
            <optionNo value="-1" />
            <optionOther xml:lang="en">
              <p>If yes, were you able to stop the background sound from playing and if so, how did you do it ?</p>
            </optionOther>
            <space>
              <rows>4</rows>
              <columns>30</columns>
            </space>
          </yesNoOpenQuestion>
        </questions>
        <experience>
          <AssistiveTechnology minimumLevel="3" type="screenreader" />
          <UserAgent minimumLevel="4" type="browser" />
          <Device minimumLevel="3" type="PC" />
        </experience>
        <disabilities>
          <disability>blindness</disability>
          <disability>low vision</disability>
        </disabilities>
      </scenario>
