	<formalMetadata xml:lang="en">
		<description>
			Document containing a single
			<html:code>input</html:code>
			field with a descriptive associated
			<html:code>label</html:code>
			text.
		</description>
		<title>Labels associated with input elements</title>
		<dc:creator>evlach@aegean.gr</dc:creator>
		<dc:language>en</dc:language>
		<dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
		<date>2005-08-27</date>
		<status>draft</status>
	</formalMetadata>
	<technology xml:lang="en">
		<recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
			<label>
				<html:acronym>XHTML</html:acronym>
				&#8482; 1.0 The Extensible HyperText Markup Language
				(Second Edition)
			</label>
			<testElements>
				<testElement>
					<elementName localname="label"
						namespace="http://www.w3.org/1999/xhtml" />
					<specReference
						xlink:href="http://www.w3.org/TR/1999/REC-html401-19991224/interact/forms.html#edef-LABEL">
						The LABEL element
					</specReference>
				</testElement>
			</testElements>
		</recommendation>
	</technology>
	<testCase complexity="atomic">
		<purpose>
			<p>
				The test case is intended to pass as 
				there is appropriate text in the
				associated <html:code>label</html:code> of the
				<html:code>input</html:code> field.
			</p>
		</purpose>
		<requiredTests>
			<testModes>
				<testMode>enduser</testMode>
			</testModes>
			<scenario id="s01">
				<questions>
					<yesNoQuestion>
						<questionText xml:lang="en">
							<p>
								Is there a text label associated with
								input element?
							</p>
						</questionText>
						<optionYes value="+1" />
						<optionNo value="-1" />
					</yesNoQuestion>
				</questions>
				<experience>
					<AssistiveTechnology type="screenreader"
						minimumLevel="3" /><!--@TODO: The value below is dummies!!! There was no experience indication in the TCDL 1.0 version of this test case description.-->
					<AssistiveTechnology type="Braille display"
						minimumLevel="1" />
					<UserAgent type="browser" minimumLevel="1" />
				</experience>
			</scenario>
			<scenario id="s02">
				<questions>
					<yesNoQuestion>
						<questionText xml:lang="en">
							<p>
								Is there a text label associated with
								input element?
							</p>
						</questionText>
						<questionText xml:lang="de">
							<p><!-- @@todo -->
							</p>
						</questionText>
						<optionYes value="+1" />
						<optionNo value="-1" />
						<optionOther xml:lang="en">
							<p>@placeholder</p>
						</optionOther>
					</yesNoQuestion>
				</questions>
				<experience>
					<AssistiveTechnology type="screenreader"
						minimumLevel="1" /><!--@TODO: The value below is a dummy!! There was no experience indication in the TCDL 1.0 version of this test case description.-->
					<AssistiveTechnology type="Braille display"
						minimumLevel="3" />
					<UserAgent type="browser" minimumLevel="1" />
				</experience>
			</scenario>
		</requiredTests>
		<files sequential="false">
			<file
				xlink:href="../testfiles/xhtml1_wcag2_20050630_1.1_l1_sc3_002.html"
				hrefLang="en" />
		</files>
	</testCase>
	<rules>
		<rule
			id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_1.1_text-equiv-sensory" primary="yes">
			<locations expectedResult="pass">
				<location line="11" column="39"
					xpath="/:html/:body/:form/:p/:label" />
			</locations>
			<functionalOutcome>
				<p>There is a valid label for the input element</p>
			</functionalOutcome>
			<techComment>
				<p>
					There is a valid
					<html:code>label</html:code>
				</p>
			</techComment>
		</rule>
	</rules>
	<namespaceMappings>
		<namespace nsPrefix="" nsURI="http://www.w3.org/1999/xhtml" />
	</namespaceMappings>
</testCaseDescription>