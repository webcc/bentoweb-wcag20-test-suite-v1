  <formalMetadata xml:lang="en">
    <description>Document containing a link to a video file with sign language interpretation.</description>
    <title>Sign language interpretation for multimedia</title>
    <dc:creator>sandor.herramhof@jku.at</dc:creator>
    <dc:language>en</dc:language>
    <dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
    <date>2005-08-23</date>
    <status>accepted for end user evaluation</status>
  </formalMetadata>
  <technology xml:lang="en">
    <recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
      <label>
        <html:acronym>XHTML</html:acronym>&#8482; 1.0 The Extensible HyperText Markup Language (Second Edition)</label>
    </recommendation>
    <recommendation xlink:href="http://go.microsoft.com/fwlink/?LinkId=31334">
      <label>
        <html:acronym>ASF</html:acronym> Specification</label>
    </recommendation>
  </technology>
  <testCase complexity="atomic">
    <purpose>
      <p>The document is intended to pass (in all available accessibility guidelines documents) because sign language interpretation provided in the multimedia file. Only existence of sign language interpretation is tested.</p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>enduser</testMode>
      </testModes>
      <scenario id="s01">
        <questions>
          <yesNoOpenQuestion>
            <questionText xml:lang="en">
              <p>Please start the multimedia.</p>
              <p>Did the sign language interpretation avatar support you in understanding what the multimedia fragment was about ?</p>
            </questionText>
            <optionYes value="1" />
            <optionNo value="-1" />
            <optionOther xml:lang="en">
              <p>Do you have any suggestions on how this can be improved or any comments on this technology ?</p>
            </optionOther>
            <space>
              <rows>4</rows>
              <columns>30</columns>
            </space>
          </yesNoOpenQuestion>
        </questions>
        <experience>
          <UserAgent minimumLevel="3" type="browser" />
          <Device minimumLevel="3" type="PC" />
        </experience>
        <disabilities>
          <disability>deafness</disability>
        </disabilities>
      </scenario>
    </requiredTests>
    <files>
      <file xlink:href="../testfiles/xhtml1_wcag2_20050630_1.2_l3_sc1_002.html" hrefLang="en" />
    </files>
  </testCase>
  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_1.2_media-equiv-sign" primary="yes">
      <locations expectedResult="pass" />
      <functionalOutcome>
        <p>Multimedia content does provide sign translation.</p>
      </functionalOutcome>
    </rule>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG1_19990505_1.4" primary="no">
      <locations expectedResult="pass" />
      <functionalOutcome>
        <p>Multimedia content does provide sign translation.</p>
      </functionalOutcome>
    </rule>
  </rules>
  <namespaceMappings>
    <namespace nsPrefix="h" nsURI="http://www.w3.org/1999/xhtml" />
  </namespaceMappings>
</testCaseDescription>