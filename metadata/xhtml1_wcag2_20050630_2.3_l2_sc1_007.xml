  <formalMetadata xml:lang="en">
		<description>Document including flickering image via stylesheet (CSS: :before).</description>
		<title>Content should not cause seizures due to photosensitivity</title>
		<dc:creator>sandor.herramhof@jku.at</dc:creator>
		<dc:language>en</dc:language>
		<dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
		<date>2005-11-21</date>
		<status>draft</status>
	</formalMetadata>
	<technology xml:lang="en">
		<recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
			<label>
				<html:acronym>XHTML</html:acronym>&#8482; 1.0 The Extensible HyperText Markup Language (Second Edition)</label>
		</recommendation>
		<recommendation xlink:href="http://www.w3.org/TR/1998/REC-CSS2-19980512/">
			<label>
				<html:acronym>CSS</html:acronym> 2.0 Specification</label>
		</recommendation>
		<recommendation xlink:href="http://www.ofcom.org.uk/tv/ifi/guidance/legacy/vrs_code_notes/flsh_imgs/gn_flash.pdf">
			<label>ITC Guidance Note for Licensees on Flashing Images and Regular Patterns in Television</label>
		</recommendation>
	</technology>
	<testCase complexity="atomic">
		<purpose>
			<p></p>
		</purpose>
		<requiredTests>
			<testModes>
				<testMode>automatic</testMode>
				<testMode>enduser</testMode>
				<testMode>oneExpert</testMode>
			</testModes>
			<scenario id="s01">
				<questions>
					<yesNoQuestion>
						<questionText xml:lang="en">
							<p>Document is intended to fail, because it includes content that violates the general flash threshold. Flickering content  is tested.</p>
						</questionText>
						<optionYes value="1"/>
						<optionNo value="-1"/>
						<optionOther xml:lang="en">
							<p>@placeholder</p>
						</optionOther>
					</yesNoQuestion>
				</questions>
				<experience>
					<UserAgent type="browser" minimumLevel="1"/>
				</experience>
			</scenario>
		</requiredTests>
		<files sequential="false">
			<file xlink:href="../testfiles/xhtml1_wcag2_20050630_2.3_l2_sc1_007.html" hrefLang="en"/>
		</files>
	</testCase>
	<rules>
		<rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_2.3_flicker-does-not-violate" primary="yes">
			<locations expectedResult="fail">
				<location line="10" column="6" xpath="/h:html/h:body/h:p"/>
			</locations>
			<functionalOutcome>
				<p>Content potentially causes seizures due to photosensitivity.</p>
			</functionalOutcome>
			<techComment>
				<p><html:acronym>CSS</html:acronym> <html:code>before</html:code> element includes flickering animated gi.</p>
			</techComment>
		</rule>
		<rule id="http://bentoweb.org/refs/rulesets.xml#WCAG1_19990505_7.1" primary="no">
			<locations expectedResult="fail">
				<location line="10" column="6" xpath="/h:html/h:body/h:p"/>
			</locations>
			<functionalOutcome>
				<p>Content potentially causes seizures due to photosensitivity.</p>
			</functionalOutcome>
			<techComment>
				<p><html:acronym>CSS</html:acronym> <html:code>before</html:code> element includes flickering animated gif.</p>
			</techComment>
		</rule>
	</rules>
	<namespaceMappings>
		<namespace nsPrefix="h" nsURI="http://www.w3.org/1999/xhtml"/>
	</namespaceMappings>
</testCaseDescription>
