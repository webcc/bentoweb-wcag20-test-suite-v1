      </requiredTests>
      <files sequential="false">
         <file xlink:href="../testfiles/xhtml1_wcag2_20050630_1.4_l2_sc3_003.html" hrefLang="en"/>
      </files>
   </testCase>
   <rules>
      <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_1.4_visual-audio-contrast-dis-audio" primary="yes">
         <locations expectedResult="fail">
            <location line="5" column="5" xpath="/h:html/h:head/h:script"/>
         </locations>
         <functionalOutcome>
            <p>Background sound cannot be stopped.</p>
         </functionalOutcome>
         <techComment>
            <p>The <html:code>object</html:code> element causes plays a sound that cannot be stopped.</p>
         </techComment>
      </rule>
   </rules>
