  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_1.3_content-structure-presentation-color" primary="yes">
      <locations expectedResult="fail">
        <location line="10" column="25" xpath="/:html/:body/:p/:b" />
      </locations>
      <functionalOutcome>
        <p>Bold element has been used for emphasis purposes</p>
