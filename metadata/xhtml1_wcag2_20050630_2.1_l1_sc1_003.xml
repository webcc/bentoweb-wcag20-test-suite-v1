	<formalMetadata xml:lang="en">
		<description>
			Document containing client side image maps with no
			<html:code>accesskey</html:code>
			to allow rapid keyboard access.
		</description>
		<title>Client side image maps for rapid keyboard access</title>
		<dc:creator>evlach@aegean.gr</dc:creator>
		<dc:language>en</dc:language>
		<dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
		<date>2005-09-01</date>
		<status>draft</status>
	</formalMetadata>
	<technology xml:lang="en">
		<recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
			<label>
				<html:acronym>XHTML</html:acronym>
				&#8482; 1.0 The Extensible HyperText Markup Language
				(Second Edition)
			</label>
			<testElements>
				<testElement>

					<elementName localname="map"
						namespace="http://www.w3.org/1999/xhtml" />

					<specReference
						xlink:href="http://www.w3.org/TR/1999/REC-html401-19991224/struct/objects.html#edef-MAP">
						Client-side image maps: the MAP and AREA
						elements
					</specReference>

				</testElement>

				<testElement>

					<elementName localname="area"
						namespace="http://www.w3.org/1999/xhtml" />

					<specReference
						xlink:href="http://www.w3.org/TR/1999/REC-html401-19991224/struct/objects.html#edef-AREA">
						Client-side image maps: the MAP and AREA
						elements
					</specReference>

				</testElement>

				<testElement>

					<elementName localname="img"
						namespace="http://www.w3.org/1999/xhtml" />

					<specReference
						xlink:href="http://www.w3.org/TR/1999/REC-html401-19991224/struct/objects.html#edef-IMG">
						Including an image: the IMG element
					</specReference>

				</testElement>

			</testElements>

		</recommendation>

	</technology>


	<testCase complexity="atomic">
		<purpose>
			<p>
				The test case is intended to fail as
				image map elements <html:code>area</html:code>
				has no appropriate <html:code>accesskey</html:code>
				attribute.
			</p>
		</purpose>
		<requiredTests>
			<testModes>
				<testMode>automatic</testMode>
			</testModes>
			<scenario id="s01">
				<questions>
					<yesNoQuestion>
						<questionText xml:lang="en">

							<p>
								Is there rapid keyboard access for image
								map regions?
							</p>

						</questionText>
						<questionText xml:lang="de">

							<p><!-- @@todo -->

							</p>

						</questionText>
						<optionYes value="-1" />
						<optionNo value="+1" />
					</yesNoQuestion>
				</questions>
				<experience>
					<AssistiveTechnology type="screenreader"
						minimumLevel="1" /><!--@TODO: The value below is dummies!!! There was no experience indication in the TCDL 1.0 version of this test case description.-->
					<AssistiveTechnology type="Braille display"
						minimumLevel="1" />
					<UserAgent type="browser" minimumLevel="1" />
				</experience>
			</scenario>
		</requiredTests>

		<files sequential="false">

			<file
				xlink:href="../testfiles/xhtml1_wcag2_20050630_2.1_l1_sc1_003.html"
				hrefLang="en" />

		</files>

	</testCase>


	<rules>

		<rule
			id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050211_internal_2.1_keyboard-operation-keyboard-operable" primary="yes">

			<locations expectedResult="fail">

				<location line="12" column="62"
					xpath="/:html/:body/:div/:area[1]" />
				<location line="13" column="62"
					xpath="/:html/:body/:div/:area[2]" />
				<location line="14" column="62"
					xpath="/:html/:body/:div/:area[3]" />
			</locations>

			<functionalOutcome>

				<p>
					Rapid keyboard accessed is not allowed for image map
					regions
				</p>

			</functionalOutcome>

			<techComment>

				<p>
					Rapid keyboard accessed is not allowed for
					<html:code>area</html:code>
					element
				</p>

			</techComment>

		</rule>

	</rules>

	<namespaceMappings>
		<namespace nsPrefix="" nsURI="http://www.w3.org/1999/xhtml" />
	</namespaceMappings>
</testCaseDescription>