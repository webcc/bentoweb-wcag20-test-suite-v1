  <formalMetadata xml:lang="en">
      <description>Document containing a file input; when the file input changes a new file is loaded into the browser.</description>
      <title>Change of content - file input onchange</title>
      <dc:creator>johannes.koch@fit.fraunhofer.de</dc:creator>
      <dc:language>en</dc:language>
      <dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
      <date>2005-08-25</date>
      <status>draft</status>
   </formalMetadata>
   <technology xml:lang="en">
      <recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
         <label>
            <html:acronym>XHTML</html:acronym>&#8482; 1.0 The Extensible HyperText Markup Language (Second Edition)</label>
         <testElements>
            <testElement>
               <elementName localname="input" namespace="http://www.w3.org/1999/xhtml"/>
               <specReference xlink:href="http://www.w3.org/TR/1999/REC-html401-19991224/interact/scripts.html#adef-onchange"/>
            </testElement>
         </testElements>
      </recommendation>
   </technology>
   <testCase complexity="atomic">
      <purpose>
         <p>The test is intended to fail because a change in file input state changes the content.</p>
      </purpose>
      <requiredTests>
			<testModes>
				<testMode>enduser</testMode>
			</testModes>
			<scenario id="s01">
				<userGuidance xml:lang="en">
					<p>
						Please browse to any file. Then move the focus
						out from the input field either by clicking on
						page or by tabbing and then try to browse to
						another file.
					</p>
				</userGuidance>
				<questions>
					<likertScale display="vertical">
						<questionText xml:lang="en">
							<p>
								Have you been distracted trying to do
								the task?
							</p>
						</questionText>
						<likertLevel number="1">
							<label xml:lang="en">
								not at all - did not notice any
							</label>
							<value>1</value>
						</likertLevel>
						<likertLevel number="2">
							<label xml:lang="en">
								a bit - it confused me for a second
							</label>
							<value>2</value>
						</likertLevel>
						<likertLevel number="3">
							<label xml:lang="en">
								enough - it confused me for a while
							</label>
							<value>3</value>
						</likertLevel>
						<likertLevel number="4">
							<label xml:lang="en">
								quite enough - it was difficult for me
								to do the task
							</label>
							<value>4</value>
						</likertLevel>
						<likertLevel number="5">
							<label xml:lang="en">
								very much - I could not do the task
							</label>
							<value>5</value>
						</likertLevel>
					</likertScale>
				</questions>
				<experience>
					<AssistiveTechnology type="screenreader"
						minimumLevel="2" />
					<UserAgent type="browser" minimumLevel="3" />
				</experience>
			</scenario>
			<scenario id="s02">
				<userGuidance xml:lang="en">
					<p>
						Please browse to any file. Then move the focus
						out from the input field either by clicking on
						page or by tabbing and then try to browse to
						another file.
					</p>
				</userGuidance>
				<questions>
					<likertScale display="vertical">
						<questionText xml:lang="en">
							<p>
								Have you been distracted trying to do
								the task?
							</p>
						</questionText>
						<likertLevel number="1">
							<label xml:lang="en">
								not at all - did not notice any
							</label>
							<value>1</value>
						</likertLevel>
						<likertLevel number="2">
							<label xml:lang="en">
								a bit - it confused me for a second
							</label>
							<value>2</value>
						</likertLevel>
						<likertLevel number="3">
							<label xml:lang="en">
								enough - it confused me for a while
							</label>
							<value>3</value>
						</likertLevel>
						<likertLevel number="4">
							<label xml:lang="en">
								quite enough - it was difficult for me
								to do the task
							</label>
							<value>4</value>
						</likertLevel>
						<likertLevel number="5">
							<label xml:lang="en">
								very much - I could not do the task
							</label>
							<value>5</value>
						</likertLevel>
					</likertScale>
				</questions>
				<experience>
					<UserAgent type="browser" minimumLevel="3" />
				</experience>
			</scenario>
		</requiredTests>
      <files sequential="false">
         <file xlink:href="../testfiles/xhtml1_wcag2_20050630_3.2_l2_sc3_028.html" hrefLang="en"/>
      </files>
   </testCase>
   <rules>
      <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_3.2_consistent-behavior-unpredictable-change" primary="yes">
         <locations expectedResult="fail">
            <location line="9" column="110" xpath="/h:html/h:body/h:p[1]/h:input"/>
         </locations>
         <functionalOutcome>
            <p>Change of content onchange.</p>
         </functionalOutcome>
         <techComment>
            <p>The JavaScript in the onchange attribute causes the browser to load another document.</p>
         </techComment>
      </rule>
   </rules>
