  <formalMetadata xml:lang="en">
    <description>Two documents containing a navigation section and a content section displayed in a different order in each file using javascript.</description>
    <title>Components occur in same order</title>
    <dc:creator>johannes.koch@fit.fraunhofer.de</dc:creator>
    <dc:language>en</dc:language>
    <dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
    <date>2005-08-25</date>
    <status>draft</status>
  </formalMetadata>
  <technology xml:lang="en">
    <recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
      <label>
        <html:acronym>XHTML</html:acronym>&#8482; 1.0 The Extensible HyperText Markup Language (Second Edition)</label>
    </recommendation>
    <recommendation xlink:href="http://www.w3.org/TR/1998/REC-CSS2-19980512/">
      <label>
        <html:acronym>CSS</html:acronym> 2.0 Specification</label>
    </recommendation>
  </technology>
  <testCase complexity="atomic">
    <purpose>
      <p>The test is intended to fail because the two sections in the two documents are displayed in different order.</p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>enduser</testMode>
      </testModes>
      <scenario id="s01">
        <userGuidance xml:lang="en">
          <p>Please try to navigate to this simple web site.</p>
        </userGuidance>
        <questions>
          <yesNoQuestion>
            <questionText xml:lang="en">
              <p>Did you find navigation easy/usable?</p>
            </questionText>
            <optionYes value="1" />
            <optionNo value="-1" />
            <optionOther xml:lang="en">
              <p />
            </optionOther>
          </yesNoQuestion>
        </questions>
        <experience>
          <UserAgent minimumLevel="1" type="browser" />
        </experience>
      </scenario>
      <scenario id="s02">
        <userGuidance xml:lang="en">
          <p>Please try to navigate this simple web site.</p>
        </userGuidance>
        <questions>
          <yesNoQuestion>
            <questionText xml:lang="en">
              <p>Did you find easily the links to move to other page?</p>
            </questionText>
            <optionYes value="1" />
            <optionNo value="-1" />
            <optionOther xml:lang="en">
              <p />
            </optionOther>
          </yesNoQuestion>
        </questions>
        <experience>
          <AssistiveTechnology minimumLevel="1" type="screenreader" />
          <UserAgent minimumLevel="1" type="browser" />
        </experience>
      </scenario>
    </requiredTests>
    <files sequential="true">
      <file xlink:href="../testfiles/xhtml1_wcag2_20050630_3.2_l2_sc1_005.html" hrefLang="en" />
      <file xlink:href="../testfiles/xhtml1_wcag2_20050630_3.2_l2_sc1_004.html" hrefLang="en" />
    </files>
  </testCase>
  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_3.2_consistent-behavior-consistent-locations" primary="yes">
      <locations expectedResult="fail">
        <location xlink:href="../testfiles/xhtml1_wcag2_20050630_3.2_l2_sc1_004.html" line="21" column="14" xpath="/h:html/h:head/h:script" />
      </locations>
      <functionalOutcome>
        <p>Components do not occur in same order.</p>
      </functionalOutcome>
      <techComment>
        <p>Different order via Javascript positioning</p>
      </techComment>
    </rule>
  </rules>
  <namespaceMappings>
    <namespace nsPrefix="h" nsURI="http://www.w3.org/1999/xhtml" />
  </namespaceMappings>
</testCaseDescription>