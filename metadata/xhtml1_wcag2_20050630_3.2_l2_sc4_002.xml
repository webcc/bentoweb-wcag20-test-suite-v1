  <formalMetadata xml:lang="en">
    <description>Two documents, each containing a link (first 'Home', second 'Homepage').</description>
    <title>Functional components (a) consistently labeled.</title>
    <dc:creator>johannes.koch@fit.fraunhofer.de</dc:creator>
    <dc:language>en</dc:language>
    <dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
    <date>2005-08-25</date>
    <status>draft</status>
  </formalMetadata>
  <technology xml:lang="en">
    <recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
      <label>
        <html:acronym>XHTML</html:acronym>&#8482; 1.0 The Extensible HyperText Markup Language (Second Edition)</label>
      <testElements>
        <testElement>
          <elementName localname="a" namespace="http://www.w3.org/1999/xhtml" />
          <specReference xlink:href="http://www.w3.org/TR/1999/REC-html401-19991224/struct/links.html#edef-A" />
        </testElement>
      </testElements>
    </recommendation>
  </technology>
  <testCase complexity="atomic">
    <purpose>
      <p>The test is intended to fail because elements are not consistently labeled.</p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>enduser</testMode>
      </testModes>
      <scenario id="s01">
        <userGuidance xml:lang="en">
          <p>Please navigate the demo site. Visit both pages. </p>
        </userGuidance>
        <questions>
          <likertScale display="horizontal">
            <questionText xml:lang="en">
              <p>Have you been distracted trying to do the task? </p>
            </questionText>
            <likertLevel number="1">
              <label xml:lang="en">not at all - did not notice any</label>
              <value>1</value>
            </likertLevel>
            <likertLevel number="2">
              <label xml:lang="en">a bit - it confused me for a second</label>
              <value>2</value>
            </likertLevel>
            <likertLevel number="3">
              <label xml:lang="en">enough - it confused me for a while</label>
              <value>3</value>
            </likertLevel>
            <likertLevel number="4">
              <label xml:lang="en">quite enough - it was difficult for me
								to do the task</label>
              <value>4</value>
            </likertLevel>
            <likertLevel number="5">
              <label xml:lang="en">very much - I could not do the task</label>
              <value>5</value>
            </likertLevel>
          </likertScale>
        </questions>
        <experience>
          <AssistiveTechnology minimumLevel="2" type="screenreader" />
          <UserAgent minimumLevel="3" type="browser" />
        </experience>
      </scenario>
      <scenario id="s02">
        <userGuidance xml:lang="en">
          <p>Please navigate the demo site. Visit both pages. </p>
        </userGuidance>
        <questions>
          <likertScale display="horizontal">
            <questionText xml:lang="en">
              <p>Please navigate the demo site. Visit both pages. </p>
            </questionText>
            <likertLevel number="1">
              <label xml:lang="en">not at all - did not notice any</label>
              <value>1</value>
            </likertLevel>
            <likertLevel number="2">
              <label xml:lang="en">a bit - it confused me for a second</label>
              <value>2</value>
            </likertLevel>
            <likertLevel number="3">
              <label xml:lang="en">enough - it confused me for a while</label>
              <value>3</value>
            </likertLevel>
            <likertLevel number="4">
              <label xml:lang="en">quite enough - it was difficult for me
								to do the task</label>
              <value>4</value>
            </likertLevel>
            <likertLevel number="5">
              <label xml:lang="en">very much - I could not do the task</label>
              <value>5</value>
            </likertLevel>
          </likertScale>
        </questions>
        <experience>
          <UserAgent minimumLevel="3" type="browser" />
        </experience>
      </scenario>
    </requiredTests>
    <files sequential="true">
      <file xlink:href="../testfiles/xhtml1_wcag2_20050630_3.2_l2_sc4_001.0.html" hrefLang="en" />
      <file xlink:href="../testfiles/xhtml1_wcag2_20050630_3.2_l2_sc4_002.html" hrefLang="en" />
    </files>
  </testCase>
  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_3.2_consistent-behavior-consistent-functionality" primary="yes">
      <locations expectedResult="fail">
        <location xlink:href="../testfiles/xhtml1_wcag2_20050630_3.2_l2_sc4_002.html" line="8" column="75" xpath="/h:html/h:body/h:ul/h:li/h:a/text()" />
      </locations>
      <functionalOutcome>
        <p>Components are not labeled consistently.</p>
      </functionalOutcome>
      <techComment>
        <p>The link texts are not the same.</p>
      </techComment>
    </rule>
  </rules>
  <namespaceMappings>
    <namespace nsPrefix="h" nsURI="http://www.w3.org/1999/xhtml" />
