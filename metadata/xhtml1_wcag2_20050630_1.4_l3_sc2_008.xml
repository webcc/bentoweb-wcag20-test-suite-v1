  <testCase complexity="atomic">
    <purpose>
      <p>This test case is intended to fail, because there is no mechanism to turn off the sound.</p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>enduser</testMode>
      </testModes>
      <scenario id="s01">
        <userGuidance xml:lang="en">
          <p>Configure the screen reader to allow parallel sound and speech interpretation</p>
          <p>Note : it is possible that you are not able to perform the requested action.</p>
        </userGuidance>
        <questions>
          <yesNoOpenQuestion>
            <questionText xml:lang="en">
              <p>In your opinion, did your assistive technology device produce a meaningful output of the page content ?</p>
            </questionText>
            <optionYes value="1" />
            <optionNo value="-1" />
            <optionOther xml:lang="en">
              <p>If not, were you able to overcome this issue and how ?</p>
            </optionOther>
            <space>
              <rows>4</rows>
              <columns>30</columns>
            </space>
          </yesNoOpenQuestion>
        </questions>
        <experience>
          <AssistiveTechnology minimumLevel="3" type="screenreader" />
          <UserAgent minimumLevel="4" type="browser" />
          <Device minimumLevel="3" type="PC" />
        </experience>
        <disabilities>
          <disability>blindness</disability>
          <disability>low vision</disability>
        </disabilities>
      </scenario>
