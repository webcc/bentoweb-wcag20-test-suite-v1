    <replace dir="metadata" includes="*.tcdl" excludes="*.xml">
      <replacetoken>&#13;&#10;        &#13;&#10;</replacetoken>
      <replacevalue>&#13;&#10;</replacevalue>
    </replace>
    <!-- Unix style line breaks (LF) --> 
    <replace dir="metadata" includes="*.tcdl" excludes="*.xml">
      <replacetoken>&#10;&#10;</replacetoken>
      <replacevalue>&#10;</replacevalue>
    </replace>
    <replace dir="metadata" includes="*.tcdl" excludes="*.xml">
      <replacetoken>&#10;    &#10;</replacetoken>
      <replacevalue>&#10;</replacevalue>
